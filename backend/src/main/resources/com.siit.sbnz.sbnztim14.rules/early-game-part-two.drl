#Initialize warning count
rule "Initialize warning count"
    agenda-group "early-game-part-2"
    salience 3
    no-loop
	when
		$ally: AllyChampion (
		    lane != "jungle",
			$allyLane: lane
		)
        $interaction: EarlyGamePartTwo (
            lane == $allyLane
        )
	then
	    modify($interaction){setLaneWarningCount(0)}
end



# General lane state
rule "Update warning count, laneState in problem"
    agenda-group "early-game-part-2"
    salience 2
	when
		$ally: AllyChampion (
		    lane != "jungle",
		    $allyLane: lane
		)
        $interaction: EarlyGamePartTwo (
            lane == $allyLane,
            laneState == 1,
            $warning: laneWarningCount
        )
	then
	    modify($interaction){setLaneWarningCount($warning + 3)}
end

# ally def, you can try to be more aggressive,
# there is no rule for ally type aggro, because we shouldn't update warning count in that case
rule "Update warning count, laneState normal"
    agenda-group "early-game-part-2"
    salience 2
	when
		$ally: AllyChampion (
		    lane != "jungle",
		    $allyLane: lane,
		    playType == "def"
		)
        $interaction: EarlyGamePartTwo (
            lane == $allyLane,
            laneState == 2,
            $warning: laneWarningCount
        )
	then
	    modify($interaction){setLaneWarningCount($warning + 1)}
end


rule "Update warning count, laneState winning"
    agenda-group "early-game-part-2"
    salience 2
	when
		$ally: AllyChampion (
		    lane != "jungle",
		    $allyLane: lane
		)
        $interaction: EarlyGamePartTwo (
            lane == $allyLane,
            laneState == 3,
            $warning: laneWarningCount
        )
	then
	    modify($interaction){setLaneWarningCount($warning -1)}
end



