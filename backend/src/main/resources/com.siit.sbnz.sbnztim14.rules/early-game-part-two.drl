rule "warning count 3 or more, change playType from aggro to def"
    agenda-group "early-game-part-2"
    salience 0
	when
		$ally: AllyChampion (
		    lane != "jungle",
		    $allyLane: lane,
		    playType == "aggro"
		)
        $interaction: EarlyGamePartTwo (
            lane == $allyLane,
            laneWarningCount > 2
        )
	then
	    modify($ally){setPlayType("def")}
	    // TODO: ADD MESSAGE
	    adviceStorage.addAdvice($allyLane, "early2", "POCNI DEFANZIVNIJE");
end

