	    adviceStorage.addAdvice($allyLane, "early2", "SVE COOL");
end

rule "warning count between 0 and 2"
    agenda-group "early-game-part-2"
    salience 0
	when
		$ally: AllyChampion (
		    lane != "jungle",
		    $allyLane: lane
		)
        $interaction: EarlyGamePartTwo (
            lane == $allyLane,
            (laneWarningCount >= 0 && laneWarningCount <= 2)
        )
	then
	    // TODO: ADD MESSAGE
	    adviceStorage.addAdvice($allyLane, "early2", "KAKO HOCES");

end

