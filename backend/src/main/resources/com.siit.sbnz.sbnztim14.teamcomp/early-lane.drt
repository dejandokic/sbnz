package com.siit.sbnz.sbnztim14.teamcomp

import com.siit.sbnz.sbnztim14.model.Champion;
import com.siit.sbnz.sbnztim14.model.AllyChampion;
import com.siit.sbnz.sbnztim14.model.EnemyChampion;
import com.siit.sbnz.sbnztim14.model.AdviceStorage;

global com.siit.sbnz.sbnztim14.model.AdviceStorage adviceStorage;

template "early-lane"


rule "@{allyType} vs @{enemyType}, ally @{skillsName}, ally @{playType}"
	when
		$ally : AllyChampion(
			lane != "jungle",
			role == @{allyType},
			$allyLane: lane,
			hardCC: @{hardCC},
			hardEngage: @{hardEngage},
			poke: @{poke},
			waveclear: @{waveclear},
			disengage: @{disengage},
			sustain: @{sustain},
			utility: @{utility},
			playType == @{playType}
		)
		$enemy : EnemyChampion(
			lane == $allyLane,
			role == @{enemyType}
		)
	then
		adviceStorage.addAdvice($allyLane, "early", @{advice});
end

end template
